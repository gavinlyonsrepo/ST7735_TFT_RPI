# Gavin lyons 06-2021
# Makefile to install library for ST7735_TFT_RPIlibrary.
# URL: https://github.com/gavinlyonsrepo/ST7735_TFT_RPI
# Library is installed to /usr/lib and include files are placed at /usr/include.
# Uninstall and clean options provided
# Options
# 1. make = install library
# 2. clean = deletes .o files generated by step 1 from build directory
# 3. make uninstall  = uninstalls library

# Where you want it installed
PREFIX=/usr
# where to place the libray
LIBDIR=$(PREFIX)/lib
# library name
LIB=libST7735_TFT_RPI
# shared library name
LIBNAME=$(LIB).so.1.0

MD=mkdir
SRC=src
OBJ=obj
SRCS = $(wildcard $(SRC)/*.cpp)
OBJS = $(patsubst $(SRC)%.cpp,  $(OBJ)/%.o, $(SRCS))

CC=g++
CFLAGS= -Ofast -mfpu=vfp -mfloat-abi=hard -march=armv6zk -mtune=arm1176jzf-s -Iinclude/
LDFLAGS= -lbcm2835

# make all
# reinstall the library after each recompilation
all: pre-build ST7735_TFT_RPI install

pre-build:
	@echo
	@echo "*****************"
	@echo "[START!]"
	@echo
	@echo "[MAKE LIBRARY]"
	$(MD) -vp $(OBJ)


# Make the library
ST7735_TFT_RPI: $(OBJS)
	$(CC) -shared -Wl,-soname,$(LIB).so.1 $(CFLAGS) $(LDFLAGS)  -o ${LIBNAME} $^

# Library parts
$(OBJ)/%.o: $(SRC)/%.cpp
	$(CC) -Wall -fPIC -c $(CFLAGS) $< -o $@

# Install the library to LIBPATH
install:
	@echo
	@echo "*****************"
	@echo "[INSTALL LIBRARY]"
	@if ( test ! -d $(PREFIX)/lib ) ; then mkdir -vp $(PREFIX)/lib ; fi
	@install -vm 0755 ${LIBNAME} ${LIBDIR}
	@ln -svf ${LIBDIR}/${LIBNAME} ${LIBDIR}/${LIB}.so.1
	@ln -svf ${LIBDIR}/${LIBNAME} ${LIBDIR}/${LIB}.so
	@ldconfig
	@rm -rvf ${LIB}.*
	@echo "*****************"
	@echo
	@echo "[INSTALL HEADERS]"
	@if ( test ! -d $(PREFIX)/include ) ; then mkdir -p $(PREFIX)/include ; fi
	@cp -vf  include/ST7735_TFT.h $(PREFIX)/include
	@cp -vf  include/ST7735_TFT_graphics.h $(PREFIX)/include
	@cp -vf  include/ST7735_TFT_Font.h $(PREFIX)/include
	@cp -vf  include/ST7735_TFT_Print.h $(PREFIX)/include
	@echo "[DONE!]"

# Uninstall the library
uninstall:
	@echo "******************"
	@echo "[UNINSTALL LIBRARY]"
	@rm -vf ${LIBDIR}/${LIB}.*

	@echo "[UNINSTALL HEADERS]"
	@rm -rvf  $(PREFIX)/include/ST7735_TFT.h
	@rm -rvf  $(PREFIX)/include/ST7735_TFT_graphics.h
	@rm -rvf  $(PREFIX)/include/ST7735_TFT_Font.h
	@rm -rvf  $(PREFIX)/include/ST7735_TFT_Print.h
	@echo "[DONE!]"

# clear build files
clean:
	@echo "******************"
	@echo "[CLEAN OBJECT FILES]"
	rm -rvf $(OBJ)/*.o ${LIB}.*
	@echo "[DONE!]"
	@echo "******************"
